{
  "name": "@scayle/storefront-application-playwright",
  "private": true,
  "author": "SCAYLE Commerce Engine",
  "description": "End-to-End test suite for the SCAYLE Storefront Application.",
  "version": "1.0.0",
  "packageManager": "pnpm@10.14.0",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "playwright": "1.54.2",
    "playwright-core": "1.54.2",
    "undici-types": "7.13.0"
  },
  "devDependencies": {
    "@playwright/test": "1.54.2",
    "@types/node": "22.17.0",
    "eslint": "9.32.0",
    "eslint-plugin-playwright": "2.2.2",
    "lighthouse": "12.8.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  },
  "scripts": {
    "test:e2e:happy-path": "playwright test ./tests/happy-path.e2e.spec.ts",
    "test:e2e:lighthouse": "playwright test ./tests/lighthouse/*.ts --project chromium",
    "test:e2e": "playwright test ./tests/e2e/*.e2e.spec.ts",
    "test:e2e:ui": "playwright test --ui"
  }
}
